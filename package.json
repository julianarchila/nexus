{
  "name": "nexus",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev ",
    "dev:web": "turbo run dev --filter=@nexus/web",
    "dev:desktop": "turbo run dev --filter=@nexus/desktop",
    "build": "turbo run build",
    "lint": "biome check",
    "format": "biome format --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "turbo": "^2.6.3",
    "typescript": "^5"
  }
}
