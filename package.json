{
  "name": "nexus",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev ",
    "dev:web": "turbo run dev --filter=@nexus/web",
    "dev:desktop": "turbo run dev --filter=@nexus/desktop",
    "build": "turbo run build",
    "lint": "biome check",
    "format": "biome format --write",
    "db": "bun run --filter=@nexus/web db"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "tsx": "^4.21.0",
    "turbo": "^2.6.3",
    "typescript": "^5"
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@tanstack/devtools-vite": "^0.3.12",
    "@tanstack/react-devtools": "^0.8.4",
    "@tanstack/react-query-devtools": "^5.91.1"
  }
}
